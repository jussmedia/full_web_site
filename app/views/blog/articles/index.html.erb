<h1>All Articles</h1>

<ul id="articles">
  <% @articles.each do |article| %>
    <div class="post">
      <h2 class="title"><span><%= link_to article.title, article%></span></h2>
      <!-- need to check and insert image if applicable -->
      <%= render partial: 'post_info', locals: {article: article}%>
      <p>
        <%= article.body %>
      </p>
      <%= link_to 'Read more', article, class: 'arrow-link'%>
    </div>
  <% end %>
</ul>

<div class="pagination">
  <ul>
    <li><a href="#">&larr;</a></li>
    <li class="active"><a href="#">10</a></li>
    <li class="disabled"><a href="#">...</a></li>
    <li><a href="#">20</a></li>
    <li><a href="#">&rarr;</a></li>
  </ul>
</div>
<br>
<%= link_to 'New Article', new_blog_article_path, class: 'new_article' %>
