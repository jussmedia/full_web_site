<h1>All Articles</h1>

<ul id="articles">
  <% @articles.each do |article| %>
    <div class="post">
      <h2 class="title"><span><%= link_to article.title, article%></span></h2>
      <!-- need to check and insert image if applicable -->
      <div class="post_info">
        <div class="fleft"><span><%= article.created_at.strftime('%d %b %Y')%></span> / By <%= link_to article.published_by %> /
          Tags <% article.tags.each do |tag| %>
            <%= link_to tag.name, blog_tag_path(tag) %>
          <% end %>
        </div>
        <div class="fright"><%= link_to article.comments.count,  blog_article_comments_path(article.comments) %> Comments </div>
        <div class="clear"></div>
      </div>
      <p>
        <%= article.body %>
      </p>
      <%= link_to 'Read more', article, class: 'arrow-link'%>
    </div>
  <% end %>
</ul>

<br>
<%= link_to 'New Article', new_blog_article_path, class: 'new_article' %>
