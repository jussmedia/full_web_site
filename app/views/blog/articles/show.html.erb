<p id="notice"><%= notice %></p>

<h1><%= @article.title %> </h1>

<p>
  <%= @article.body %>
</p>

<p>
  <strong>Published:</strong>
  <%= @article.published %>
</p>
<p>
  Tags:
  <% @article.tags.each do |tag| %>
    <%= link_to tag.name, blog_tag_path(tag) %>
  <% end %>
</p>
<%= link_to 'Edit', edit_blog_article_path(@article) %> |
<%= link_to 'Delete', blog_article_path(@article), method: :delete, data: {confirm: "Really delete the article?"} %> |

<h3>Comments (<%= @article.comments.size %>)</h3>
<%= render partial: 'blog/articles/comment', collection: @article.comments %>


<%= render partial: 'blog/comments/form' %>
<%= link_to '<< Back to Articles List', blog_articles_path %>
